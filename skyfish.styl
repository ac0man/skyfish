//custom fonts

@font-face
    font-family Source Han Sans
    font-weight normal
    src local('Source Han Sans Regular'),url(skyfish/SourceHanSans-Regular.otf)

@font-face
    font-family Source Han Sans
    font-weight bold
    src local('Source Han Sans Bold'),url(skyfish/SourceHanSans-Bold.otf)

@font-face
    font-family Source Han Serif
    font-weight normal
    src local('Source Han Serif Regular'),url(skyfish/SourceHanSerif-Regular.otf)
  
@font-face
    font-family Source Han Serif
    font-weight bold
    src local('Source Han Serif Bold'),url(skyfish/SourceHanSerif-Bold.otf)

@font-face
    font-family mononoki
    font-style normal
    font-weight normal
    src local('mononoki Regular'),url(skyfish/mononoki-Regular.woff)

@font-face
    font-family mononoki
    font-style italic
    font-weight normal
    src local('mononoki Italic'),url(skyfish/mononoki-Italic.woff)

@font-face
    font-family mononoki
    font-style normal
    font-weight bold
    src local('mononoki Bold'),url(skyfish/mononoki-Bold.woff)

@font-face
    font-family mononoki
    font-style italic
    font-weight bold
    src local('mononoki Bold Italic'),url(skyfish/mononoki-BoldItalic.woff)

font-sans = Source Han Sans, sans-serif

font-serif = Source Han Serif, serif

font-mono = mononoki, monospace

html
    font-size 16px

body
    background #fff
    font-family font-sans
    color #134

#write
    max-width 60em
    margin 0 auto
    padding 20px 30px 50px

//typography

h1, h2, h3, h4, h5, h6
    position relative
    margin-top 1em
    margin-bottom 1em
    font-weight bold
    line-height 1.4em

h1
    font-size 2em
    line-height 1.2em

h2
    font-size 1.5em
    line-height 1.225em
    border-bottom 1px solid #aaa
    padding-bottom 10px

h3
    font-size 1.4em
    line-height 1.43em
    border-left 12px solid #1ab8dd
    padding-left 16px

h4
    font-size 1.2em

h5
    font-size 1em

h6
    font-size 1em
    color #999

hr
    border 1px solid #ddd

//links

a
    text-decoration none
    color #1ab8dd
    font-weight bold
    font-size 1.1em

a
    &:hover,&:active
        text-decoration underline

//lists

ul,ol
    padding-left 2em

.task-list
	padding-left 2em

.task-list-item
	padding-left 1.6em
    padding-bottom 5px

.task-list-item
    input
        top 3px
        left 8px

.task-list-item
    input::before
        content ""
        width 100%
        height 100%
        &:hover
            background-color #999
        &:checked
            background-color #1ab8dd

.task-list-item
    input::after
        content ""
        width 100%


//tables

table
    width: 100%
    border-collapse: collapse
    border-spacing: 0
    th
        font-weight: bold
        border-bottom: 3px solid #ddd
        padding-bottom: 0.5em
    td
        border-bottom: 1px solid #ddd
        padding: 10px 0


//blockquotes

blockquote
    border-left 5px solid #ddd
    padding-left 0.5em
    font-family font-serif
    color: #134

blockquote blockquote
    padding-right 0

//code fences

.md-fences,code,tt
    margin 0 0.3em
    padding 0 0.3em
    background #eee
    font-family font-mono
    text-shadow 0 1px #fff

.md-fences
    margin 15px auto
    padding 0.7em 1em
    text-shadow none

@import "skyfish/material"

.CodeMirror div.CodeMirror-cursor
    border-left 1px solid #E4629A

//YAML front matters
@css{
    #write pre.md-meta-block {
        padding: 1em;
        background-color: #fff;
        border-bottom: 1px dashed #ddd;
        color: #80cbc4;
        margin-top: 0 !important;
    }
}

//image meta
.md-image>.md-meta
    color inherit

header, .context-menu, .megamenu-content, footer
    font-family font-sans

//print
@media print
    html
        font-size 13px
    table,
    pre
        page-break-inside: avoid;
    pre
        word-wrap break-word

//controller
header, .context-menu, .megamenu-content, footer
    font-family Helvetica Neue,Helvetica,Segoe UI,Arial,sans-serif

//diagram
.md-diagram-panel-preview
  color #263238
  